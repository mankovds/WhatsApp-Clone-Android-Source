<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- ActionMode Styles -->
        <item name="android:actionModeBackground">@color/colorActionMode</item>
        <item name="android:backgroundStacked">@color/colorActionMode</item>
        <item name="android:backgroundSplit">@color/colorActionMode</item>
        <!--  It should be true otherwise action mode will not overlay toolbar -->
        <item name="windowActionModeOverlay">true</item>

        <!--change popup color options menu-->
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>

    </style>



    <style name="Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>

        <!--set font for texts view and buttons--><!--
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>--> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--set font for texts view and buttons--><!--
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>--> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
    </style>

    <style name="ToolbarSubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">13sp</item>

    </style>


    <!-- les cardView styles -->
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="TextInputEditTextStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/colorGray2</item>
        <item name="android:padding">15dp</item>
    </style>

    <!--buttons style-->


    <!--new-->

    <style name="ComposeEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:padding">2dp</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">4</item>
        <item name="android:maxLength">2000</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:autoText">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">flagNoEnterAction</item>
        <item name="android:textColorHint">@color/colorMessageText</item>
        <item name="android:inputType">textAutoCorrect|textCapSentences|textMultiLine</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="ComposeStoryEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:padding">2dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:imeOptions">flagNoEnterAction</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>
    <!-- ActionBar styles -->

    <style name="AttachmentTypeLabel">
        <item name="android:textColor">#ff999999</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="Theme.Transparent" parent="WhatsClone.LightTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
