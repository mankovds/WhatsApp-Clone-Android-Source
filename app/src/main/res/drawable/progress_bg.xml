<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/colorBackProgress"
                android:centerY="0.75"
                android:endColor="@color/colorBackProgress"
                android:startColor="@color/colorBackProgress" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/colorFrontProgress"
                    android:centerY="0.75"
                    android:endColor="@color/colorFrontProgress"
                    android:startColor="@color/colorFrontProgress" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/colorFrontProgress"
                    android:centerY="0.75"
                    android:endColor="@color/colorFrontProgress"
                    android:startColor="@color/colorFrontProgress" />
            </shape>
        </clip>
    </item>

</layer-list>