<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sender_name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="4dp"
        android:paddingTop="1dp"
        android:paddingRight="4dp"
        android:paddingBottom="1dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <include
        android:id="@+id/replied_message_view"
        layout="@layout/replied_message_view"
        android:visibility="gone" />

    <TextView
        android:id="@+id/date_general_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/bb_state"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:textColor="@color/colorMessageText"
        android:clickable="false"
        android:enabled="false"
        android:textSize="13sp"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/status_date_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="55dp">

        <TextView
            android:id="@+id/date_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="0.1dp"
            android:background="@drawable/bb_state"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingStart="16dp"
            android:paddingRight="16dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:textColor="@color/colorMessageText"
            android:textSize="13sp"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/status_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="6dp">

        <com.vanniktech.emoji.EmojiTextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="0.1dp"
            android:background="@drawable/bb_state"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingStart="16dp"
            android:paddingRight="16dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:textColor="@color/colorMessageText"
            android:textSize="15sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>